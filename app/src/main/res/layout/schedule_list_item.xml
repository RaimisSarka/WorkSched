<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sched_list_item_layout_borders"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_schedule_view_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.15"
        android:padding="5dp"
        android:text="01/01"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_schedule_view_shift_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:padding="5dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_schedule_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.65"
        android:padding="5dp"
        android:text="NameLastName"
        android:textSize="16sp" />

</LinearLayout>